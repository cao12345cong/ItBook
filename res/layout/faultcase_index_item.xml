<?xml version="1.0" encoding="utf-8"?>
<!-- faq首页listview的item -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/faultcase_item_style" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_faultcase_item_img"
            style="@style/faultcase_img_style"
            android:src="@drawable/img_faultcase" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_faultcase_item_title"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:maxHeight="30dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_faultcase_item_content"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:maxHeight="45dp"
                android:lineSpacingExtra="@dimen/margin_line_space"
                android:textColor="@color/gray"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_faultcase_item_newtag"
        android:layout_gravity="top|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/tag_new" 
        android:visibility="gone"/>

</FrameLayout>