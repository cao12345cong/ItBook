<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
     android:background="@color/gray"
    android:orientation="vertical" >
    <include 
        android:id="@+id/solution_titlebar"
        layout="@layout/solution_titlebar"
        />
     <com.xtx.itbook.ui.LoaderListView
        android:id="@+id/list_solutions"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:divider="@color/background"
        android:dividerHeight="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        
        />
     
       
     <com.xtx.itbook.ui.BottomMenuScrollView
        android:id="@+id/sltn_bottom_menu_id"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@color/bottom_menu_bg"/>

</LinearLayout>