<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@drawable/cover"
    style="@style/product_item_style">
    
    <ImageView 
        android:id="@+id/product_item_img"
       style="@style/product_img_style"
       android:layout_gravity="center_vertical"
       android:layout_marginLeft="@dimen/margin_left"
       android:background="@drawable/picture_box"
       android:src="@drawable/logo_evernote"
       android:layout_weight="1.0"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_margin="@dimen/margin_left"
        android:layout_weight="3.0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView 
            android:id="@+id/product_item_title_name"
            style="@style/main_logo_text"
            android:text="@string/app_name"/>
        <TextView 
            android:id="@+id/product_item_title_text"
            style="@style/main_logo_text"
            android:typeface="normal"
            android:textStyle="normal"
            android:text="@string/msg"
            android:textSize="@dimen/logo_txt"
            android:textColor="@color/text_color_product"
            android:layout_marginTop="@dimen/margin_line_space"/>
        
    </LinearLayout>
</LinearLayout>